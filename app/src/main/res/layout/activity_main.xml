<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/holo_orange_dark"
    tools:context=".MainActivity">


    <Button
        android:id="@+id/botaoNovaFrase"
        android:layout_width="365dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="22dp"
        android:text="@string/texto_nova_frase" />

    <TextView
        android:id="@+id/textoNovaFrase"
        android:layout_width="365dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/botaoNovaFrase"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/botaoNovaFrase"
        android:layout_marginTop="83dp"
        android:background="#faa646"
        android:textColor="@android:color/background_light"
        android:textSize="@dimen/texto_novaFrase"
        android:textStyle="bold" />
</RelativeLayout>